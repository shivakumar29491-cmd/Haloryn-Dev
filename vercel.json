{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "ignoreCommand": "echo 'Ignoring Electron folders'",
  "functions": {
    "api/**.js": {
      "maxDuration": 15,
      "memory": 1024
    }
  }
}
