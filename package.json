{
  "name": "haloryn",
  "version": "0.0.3",
  "main": "electron/main.js",
  "productName": "Haloryn",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder",
    "analyze:bundle": "node scripts/inspect-bundle.js"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.36.0",
    "mic": "^2.1.2",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^1.1.4",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.imsk.haloryn",
    "productName": "Haloryn",
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/vendor/**",
      "node_modules/@img/**"
    ],
    "electronVersion": "30.5.1",
    "npmRebuild": true,
    "forceCodeSigning": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**",
      "package.json",
      "node_modules/**",
      "!electron/node_modules/**",
      "!**/__tests__/**",
      "!coverage/**",
      "!.github/**",
      "!web/**",
      "!dist*/**",
      "!build/**",
      "!**/*.log",
      "!**/logs/**",
      "!**/log/**",
      "!**/.cache/**",
      "!**/cache/**",
      "!**/tmp/**",
      "!node_modules/app-builder-bin/**",
      "!node_modules/app-builder-lib/**",
      "!node_modules/electron/**",
      "!node_modules/7zip-bin/**",
      "!node_modules/typescript/**",
      "!node_modules/@types/**",
      "!node_modules/.bin/**",
      "!node_modules/@babel/**",
      "!node_modules/@testing-library/**",
      "!node_modules/jsdom/**",
      "!node_modules/react/**",
      "!node_modules/react-dom/**"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "compression": "maximum"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity",
      "compression": "maximum"
    }
  },
  "win": {
    "target": "nsis",
    "signAndEditExecutable": false
  }
}
