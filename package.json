{
  "name": "haloryn",
  "description": "Haloryn â€” Next-gen AI Companion",
  "version": "0.0.3",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.36.0",
    "mic": "^2.1.2",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^1.1.4",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "24.13.3"
  },

  "build": {
    "appId": "com.haloryn.app",
    "productName": "Haloryn",
    "directories": {
      "output": "dist"
    },

    "files": [
      "electron/**/*",
      "!**/*.map"
    ],
  


    "asar": true,
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Haloryn",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      }
    }
  }
}
