{
  "name": "haloryn",
  "version": "0.0.3",
  "main": "electron/main.js",
  "productName": "Haloryn",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "dotenv": "^16.4.5",
    "groq-sdk": "^0.36.0",
    "mic": "^2.1.2",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^1.1.4",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "tesseract.js": "^6.0.1"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.imsk.haloryn",
    "productName": "Haloryn",
    "asar": true,
    "asarUnpack": [
      "node_modules/sharp/**"
    ],
    "npmRebuild": true,
    "forceCodeSigning": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist*/**"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "include": "build/installer.nsh"
    }
  },
  "win": {
    "target": "nsis",
    "signAndEditExecutable": false
  }
}
